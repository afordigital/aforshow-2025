---
import "../styles/tailwind.css";
import "atropos/css";
import Aptabase from "../components/Aptabase.astro";
import OpenGraph from "@components/OpenGraph.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Aforshow 2025</title>
    <meta
      name="description"
      content="Aforshow es un evento de programaciÃ³n creado por y para desarrolladores, donde puedes demostrar tu talento participando y exponiendo una charla."
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <OpenGraph />
  </head>
  <body class="font-inter">
    <slot />
    <Aptabase />
    <script>
      const validateHash = () =>
        window.location.hash && !document.querySelector(window.location.hash)
          ? (window.location.href = "/404")
          : null;

      addEventListener("DOMContentLoaded", validateHash);
      addEventListener("hashchange", validateHash);
    </script>
  </body>
</html>

<style>
  html,
  body {
    display: flex;
    flex-direction: column;
    gap: 80px;
    scroll-behavior: smooth;
  }
</style>
